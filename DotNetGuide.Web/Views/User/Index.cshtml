@model List<ApplicationUser>
@{
    ViewData["Title"] = "All Users";
}
<div class="card shadow border-0 my-4">

    <div class="card-header bg-secondary bg-gradient m-lg-0 py-0">
        <div class="row">
            <div class="col-6 align-content-center">
                <h2 class="text-white py-2">User List</h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Add User</a>
            </div>
        </div>
    </div>
    <div class="card-body p-1">
        <div class="row">
            <table id="tblData" class="table table-responsive table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Postal Code</th>
                        <th>Company</th>
                        <th>Role</th>
                        <th></th>
                    </tr>
                </thead>
              
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Users.js"></script>
}


